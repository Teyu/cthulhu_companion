<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/player_color_background_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/player_orange"
        android:baselineAlignBottom="true"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/player_avatar_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/player_color_background_img"
        app:layout_constraintEnd_toEndOf="@id/player_color_background_img"
        app:layout_constraintStart_toStartOf="@id/player_color_background_img"
        app:layout_constraintTop_toTopOf="@id/player_color_background_img" />

</androidx.constraintlayout.widget.ConstraintLayout>